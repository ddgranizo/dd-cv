
<article class="message">
    <div class="message-body">
        <h4 class="title is-4 has-text-left">@Title</h4>
        <div class="has-text-left">
            @ChildContent
        </div>
    </div>
</article>


@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}
